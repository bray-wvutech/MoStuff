@page "{id:int}"
@model RazorCrudUI.Pages.Items.DetailsModel

@{
    ViewData["Title"] = "Item Details";
}

<h1>@ViewData["Title"]</h1>

<div>
     <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemModel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemModel.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemModel.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemModel.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemModel.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@Model.ItemModel.Id">Edit</a>    
</div>
