@page
@model UI.Pages.Admin.Orders.DetailsModel

@{
    ViewData["Title"] = "Order Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.UserEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.UserEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.ShippingAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShippingAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model =>  model.Order.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Total)
        </dd>
    </dl>
</div>

@foreach (var item in Model.Order.Items) 
{
    <table class="table">
        <thead>
            <th>@Html.DisplayNameFor(i => item.Name)</th>
            <th>@Html.DisplayNameFor(i => item.Price)</th>
            <th>@Html.DisplayNameFor(i => item.Count)</th>
            <th>@Html.DisplayNameFor(i => item.Subtotal)</th>
        </thead>
        <tbody>
            <td>@Html.DisplayFor(i => item.Name)</td>
            <td>@Html.DisplayFor(i => item.Price)</td>
            <td>@Html.DisplayFor(i => item.Count)</td>
            <td>@Html.DisplayFor(i => item.Subtotal)</td>
        </tbody>
    </table>
}

<div>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    <a asp-page="./Edit" asp-route-id="@Model.Order.Id" class="btn btn-primary">Edit</a>
</div>
